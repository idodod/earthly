{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'config:recommended',
    'default:pinDigestsDisabled',
  ],
  configMigration: true,
  prHourlyLimit: 1,
  prConcurrentLimit: 3,
  includePaths: [
    'docs/**', '.github/'
  ],
  enabledManagers: [
    'regex',
  ],
  regexManagers: [
    {
      // Earthly Version in md files
      customType: 'regex',
      fileMatch: [
        '.+\.md',
        'renovate.json5'
      ],
      matchStrings: [
        'earthly/releases/download/(?<currentValue>.+?)/',
        '- uses: earthly/actions/setup-earthly@.*?[\\s\\n]+.*?[\\s\\n]+with:[\\s\\n]*version: (?<currentValue>.+?)[\\s\\n/]+',
        '\'earthly/earthly:(?<currentValue>.+?)\'',
        'github.com/earthly/earthly:(?<currentValue>.+?)(\\+|`)',
        '(:|\\s+)earthly/earthly:(?<currentValue>.+?)[\\s\\n/]+',
        '\* `(?<currentValue>.+?)`',
        'allowedVersions: \'(?<currentValue>.+?)\',',
        'matchCurrentVersion: \'(?<currentValue>.+?)\',',
      ],
      depNameTemplate: 'earthly/earthly',
      datasourceTemplate: 'github-releases',
    },
  ],
  labels: [
    'renovate',
  ],
  packageRules: [
    {
      matchPackageNames: ['earthly/earthly'],
      matchDatasources: ['github-releases'],
      addLabels: ['earthly-version-in-docs'],
    },
    {
      matchCurrentVersion: '0.7.17',
      matchPackageNames: [
        'earthly/earthly',
      ],
      matchDatasources: [
        'github-releases',
      ],
      matchFileNames: [
        'docs/**/all-in-one.md',
        '.github/renovate.json5'
      ],
      allowedVersions: '<v0.7.19',
    }
  ],
}
